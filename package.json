{
	"name": "connected-repo",
	"version": "1.0.0",
	"description": "Starter Monorepo using Turbo of Nodejs + Fastify + OrchidORM + oRPC + Reactjs with opentelemetry setup",
	"repository": "git@github.com:teziapp/connected-repo-starter-oRPC.git",
	"author": "Balkrishna Agarwal <krishna@teziapp.com>",
	"license": "AGPL-3.0-only",
	"private": true,
	"scripts": {
		"env:sync": "node scripts/sync-env.js",
		"build": "yarn env:sync && turbo run build",
		"clean": "turbo run clean && rm -rf node_modules && rm -rf .yarn/cache && yarn cache clean",
		"db": "turbo db --",
		"dev": "yarn env:sync && turbo run dev",
		"lint": "turbo run lint",
		"format": "biome format . --write",
		"check-types": "turbo run check-types",
		"knip": "knip"
	},
	"dependencies": {
		"@orpc/server": "^1.12.1",
		"ulid": "^3.0.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"concurrently": "^9.2.1",
		"knip": "^5.30.6",
		"tsc": "^2.0.4",
		"tsc-alias": "^1.8.16",
		"turbo": "^2.5.8",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "yarn@1.22.22",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
