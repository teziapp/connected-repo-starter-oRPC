{
	"author": "Balkrishna Agarwal <krishna@teziapp.com>",
	"dependencies": {
		"@better-auth/core": "^1.4.6",
		"@connected-repo/zod-schemas": "*",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
		"@opentelemetry/instrumentation-http": "^0.208.0",
		"@opentelemetry/instrumentation-pg": "^0.61.2",
		"@opentelemetry/resources": "^2.2.0",
		"@opentelemetry/sdk-node": "^0.208.0",
		"@opentelemetry/sdk-trace-node": "^2.2.0",
		"@orpc/experimental-pino": "^1.12.1",
		"@orpc/openapi": "^1.12.3",
		"@orpc/otel": "^1.13.0",
		"@orpc/server": "^1.12.1",
		"@orpc/zod": "^1.12.3",
		"@sentry/node": "^10.32.1",
		"@sentry/opentelemetry": "^10.32.1",
		"@sentry/profiling-node": "^10.32.1",
		"better-auth": "^1.4.6",
		"dotenv": "^17.2.3",
		"orchid-orm": "^1.57.6",
		"pg": "^8.16.3",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3",
		"ua-parser-js": "^2.0.6"
	},
	"description": "Starter Monorepo using Turbo of Nodejs + Fastify + OrchidORM + oRPC + Reactjs with opentelemetry setup",
	"devDependencies": {
		"@connected-repo/typescript-config": "*",
		"@types/node": "^22.18.12",
		"@types/pg": "^8.15.5",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"cross-env": "^10.1.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"license": "AGPL-3.0-only",
	"main": "src/server.ts",
	"name": "@connected-repo/backend",
	"private": true,
	"repository": "git@github.com:teziapp/connected-repo-starter-oRPC.git",
	"scripts": {
		"build": "tsc && tsc-alias",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf node_modules && rm -rf dist",
		"db": "tsx src/db/db_script.ts",
		"dev": "tsx watch --clear-screen=false src/server.ts",
		"dev:inspect": "tsx watch --inspect src/server.ts",
		"format": "biome format . --write",
		"lint": "biome check .",
		"start": "node dist/server.js",
		"test": "cross-env NODE_ENV=test vitest",
		"test:build": "cross-env NODE_ENV=test IS_E2E_TEST=true yarn run build",
		"test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
		"test:db:setup": "cross-env NODE_ENV=test yarn db drop && cross-env NODE_ENV=test yarn db create && cross-env NODE_ENV=test yarn db up && cross-env NODE_ENV=test yarn db seed",
		"test:run": "cross-env NODE_ENV=test vitest run",
		"test:server:start": "cross-env NODE_ENV=test IS_E2E_TEST=true yarn run start",
		"test:ui": "cross-env NODE_ENV=test vitest --ui"
	},
	"version": "1.0.0"
}